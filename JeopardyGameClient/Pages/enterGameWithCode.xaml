<Page x:Class="JeopardyGame.Pages.enterGameWithCode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p = "clr-namespace:JeopardyGame.Properties"
      xmlns:local="clr-namespace:JeopardyGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="enterGameWithCode">

    <Grid>
        <Button x:Name="btnEnterCode" Click="ClickEnterLobbyWithCode" Content = "{x:Static p:Resources.btnEnterCode}" Style="{StaticResource ButtonStartGame}" FontSize="25" HorizontalAlignment="Center" Margin="0,291,0,0" VerticalAlignment="Top" Height="53" Width="132"/>
        <TextBox x:Name="tbxCode" Style="{StaticResource TextFieldAddUser}" Background="White" FontSize="20" TextWrapping="Wrap" Text="" Width="305" Height="56" HorizontalAlignment="Center" Margin="0,178,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Label x:Name="lblCodeGame" Style="{StaticResource labelStyleSimple}" FontSize="40" Content = "{x:Static p:Resources.lblCodeRoom}" Margin="0,72,0,0" HorizontalAlignment="Center" Width="auto"/>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource PurpleBackGroundIcon}" Stretch="UniformToFill"/>
        </Grid.Background>


    </Grid>

</Page>
