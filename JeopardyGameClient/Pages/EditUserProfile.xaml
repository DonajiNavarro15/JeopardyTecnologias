<Page x:Class="JeopardyGame.Pages.EditUserProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JeopardyGame.Pages"
      xmlns:p = "clr-namespace:JeopardyGame.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="1300"
      Title="EditUserProfile">
    <Viewbox Stretch="Fill">
        <Grid Height="770">
            <Border   Margin="108,220,844,287">
                <Border.Clip>
                    <EllipseGeometry RadiusX="180" RadiusY="180" Center="150,150" />
                </Border.Clip>
                <Image Source="/Images/JeopardyFosfoSign.jpg" Stretch="UniformToFill" Margin="-51,-32,35,-29" />
            </Border>
            <StackPanel Height="auto" Margin="698,105,229,500" >
                <Label x:Name="lblNameDescripCreateAcc" Content = "X" Style="{StaticResource labelStyleSimple}" 
                    Height="Auto" Width="Auto" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Border Background="Transparent" BorderBrush="#26B1FF" BorderThickness="2" CornerRadius="10" Width="568">
                    <TextBox x:Name="txbEditName" Style="{StaticResource TextFieldAddUser}" FontSize="40"  Width="552" Margin="8,0,0,0" />
                </Border>
            </StackPanel>

            <StackPanel Height="auto" Margin="698,269,229,336" >
                <Label x:Name="lblUserNameDescripCreateAcc" Content = "X" Style="{StaticResource labelStyleSimple}" 
                    Height="Auto" Width="Auto" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Border Background="Transparent" BorderBrush="#26B1FF" BorderThickness="2" CornerRadius="10" Width="582">
                    <TextBox x:Name="txbEditUserName" Style="{StaticResource TextFieldAddUser}" FontSize="40"  Width="562" Margin="8,0,0,0"/>
                </Border>
            </StackPanel>

            <StackPanel Height="auto" Margin="698,434,229,171" >
                <Label x:Name="lblEmailDescripCreateAcc" Content = "X" Style="{StaticResource labelStyleSimple}" 
                    Height="Auto" Width="Auto" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Border Background="Transparent" BorderBrush="#26B1FF" BorderThickness="2" CornerRadius="10" Width="587">
                    <TextBox x:Name="txbEditEmail" Style="{StaticResource TextFieldAddUser}" FontSize="40"  Width="567" HorizontalAlignment="Center" />
                </Border>
            </StackPanel>

            <Border Background="Transparent" BorderBrush="SteelBlue" BorderThickness="4" CornerRadius="5" Margin="177,563,1155,165">
                <Button x:Name="btnChoseImage" FontSize="20" Content = "Seleccionar imagen" FontStretch="Expanded" Style="{StaticResource ButtonRegistrerStyle}" Click="CLicButtonChoseImage" />
            </Border>
            <Border Background="Transparent" BorderBrush="SteelBlue" BorderThickness="4" CornerRadius="5" Margin="776,661,522,62">
                <Button x:Name="btnSaveChanges" FontSize="20" Content = "Guardar" FontStretch="Expanded" Style="{StaticResource ButtonConfirmationStyle}" Click="CLicButtonSaveChanges" />
            </Border>
            <Border Background="Transparent" BorderBrush="Purple" BorderThickness="4" CornerRadius="5" Margin="1069,661,229,62">
                <Button x:Name="bttCancellAction" Content="{x:Static p:Resources.bttCancellAction}" FontSize="20" FontStretch="Expanded" Style="{StaticResource ButtonCancellationStyle}" Click="CLicButtonCancelChanges" />
            </Border>
            <Grid.Background>
                <ImageBrush ImageSource="/Images/BackGround.jpg">
                </ImageBrush>
            </Grid.Background>
        </Grid>
    </Viewbox>
</Page>
