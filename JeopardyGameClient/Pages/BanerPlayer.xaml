<Page x:Class="JeopardyGame.Pages.BanerPlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JeopardyGame.Pages"      
      xmlns:p="clr-namespace:JeopardyGame.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      Title="BanerPlayer" Width="600">
    <Grid Margin="0,0,0,-13">        
        <Label x:Name="lblBanerPlayer" Content="{x:Static p:Resources.lblBaneUserTitle}" Foreground="White" FontWeight="Bold" FontSize="35" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Height="54" Width="auto"/>
        <Button 
           Click="clicConfirmBaner" Content="{x:Static p:Resources.bttContinue}"  Style="{StaticResource ButtonStartGame}" HorizontalAlignment="Left" Margin="300,326,0,0" VerticalAlignment="Top" Height="37" Width="112" RenderTransformOrigin="1.884,8.319"/>
        <Button  Click="clicCancelBaner" Content="{x:Static p:Resources.bttCancellAction}" Style="{StaticResource ButtonCancelGame}" HorizontalAlignment="Left" Margin="447,327,0,0" VerticalAlignment="Top" Height="38" Width="99"/>
        <TextBlock Text="{x:Static p:Resources.lblBanConfirmationMessage}" FontSize="25"  Foreground="White" Margin="70,179,70,179" TextWrapping="Wrap"/>
    </Grid>
</Page>
