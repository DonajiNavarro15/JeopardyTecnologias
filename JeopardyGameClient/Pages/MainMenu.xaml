<Page x:Class="JeopardyGame.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p = "clr-namespace:JeopardyGame.Properties"
      xmlns:local="clr-namespace:JeopardyGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="1300"
      Title="MainMenu">
    <Viewbox Stretch="Fill">
        <Grid Height="751">

            <Grid.Background>
                <ImageBrush ImageSource="/Images/BackGround.jpg">
                </ImageBrush>

            </Grid.Background>
            <Image HorizontalAlignment="Left" Height="234" 
       Width="399" Margin="158,14,0,0" VerticalAlignment="Top" 
       Source="/Images/logoJeopardy.png"/>
            <Image HorizontalAlignment="Left" Height="66" Margin="50,38,0,0" VerticalAlignment="Top" Width="37" Source="/Images/BackIcon.png" MouseDown="ClicSingOut" RenderTransformOrigin="0.491,2.068" />
            <Image HorizontalAlignment="Left" Height="117" Margin="1021,19,0,0" VerticalAlignment="Top" Width="99" Source="/Images/userProfile.png" MouseDown="ClicUserProfile" RenderTransformOrigin="0.491,2.068" />

            <ComboBox x:Name="LanguajeComboBox" HorizontalAlignment="Left" Margin="1066,692,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.279,-1.495" SelectionChanged="LanguageComboBox_SelectionChanged">
                <ComboBoxItem Content="English" Tag="en-EU" IsSelected="True"/>
                <ComboBoxItem Content="Español" Tag="es-MX"/>
            </ComboBox>

            <Label x:Name="lblProfileInformation"  Content= "{x:Static p:Resources.lblProfileInformation}"  MouseDown="ClicUserProfile" FontSize="20" Foreground="White" HorizontalAlignment="Left" Margin="1037,123,0,0" VerticalAlignment="Top"/>
            <Button x:Name="bttNewGame" Content = "{x:Static p:Resources.bttNewGame}" BorderBrush="{x:Null}" Style="{StaticResource NoHoverStyle}" Foreground="White" FontWeight="Bold"
                    FontSize="25" Click="CLicButtonNewGame" HorizontalAlignment="Left" Margin="138,253,0,0" VerticalAlignment="Top" Height="118" Width="400" >
                <Button.Background>
                    <ImageBrush ImageSource="/Images/blueBtn.png"/>
                </Button.Background>
            </Button>

            <Button x:Name="bttEnterGame" Content = "{x:Static p:Resources.bttEnterGame}" BorderBrush="{x:Null}" Style="{StaticResource NoHoverStyle}" Foreground="White" FontWeight="Bold"
                    FontSize="25" Click="CLicButtonEnterGame" HorizontalAlignment="Left" Margin="138,415,0,0" VerticalAlignment="Top" Height="117" Width="400" >
                <Button.Background>
                    <ImageBrush ImageSource="/Images/purpleBtn.png"/>
                </Button.Background>
            </Button>

            <Button x:Name="bttFriends" Content = "{x:Static p:Resources.bttFriends}" BorderBrush="{x:Null}" Style="{StaticResource NoHoverStyle}" Foreground="White" FontWeight="Bold"
                    FontSize="25" Click="CLicButtonFriendsList" HorizontalAlignment="Left" Margin="138,570,0,0" VerticalAlignment="Top" Height="117" Width="400" >
                <Button.Background>
                    <ImageBrush ImageSource="/Images/blueBtn.png"/>
                </Button.Background>
            </Button>




        </Grid>

    </Viewbox>

</Page>
