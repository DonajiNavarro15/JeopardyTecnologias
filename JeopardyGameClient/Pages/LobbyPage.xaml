<Page x:Class="JeopardyGame.Pages.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p = "clr-namespace:JeopardyGame.Properties"
      xmlns:local="clr-namespace:JeopardyGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="1300"
      Title="LobbyPage">

    <Grid Height="751">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/BackGround.jpg">
            </ImageBrush>

        </Grid.Background>
        <Image HorizontalAlignment="Left" Height="59" Margin="10,38,0,0" 
               VerticalAlignment="Top" Width="78" Source="/Images/BackIcon.png" 
               MouseDown="ClicBackMainMenu" RenderTransformOrigin="0.491,2.068" />
        <Image HorizontalAlignment="Left" Height="69" Margin="1137,247,0,0" 
               VerticalAlignment="Top" Width="61" Source="/Images/FriendsIcon.png" RenderTransformOrigin="4.252,2.317"/>
        <Image HorizontalAlignment="Left" Height="217" 
               Width="374" Margin="46,0,0,0" VerticalAlignment="Top" 
               Source="/Images/logoJeopardy.png" RenderTransformOrigin="0.914,0.526"/>
        <Label x:Name="lblCodeRoom" Content="Código de sala" Style="{StaticResource labelStyleSimple}" Margin="548,53,0,0"/>
        <Label x:Name="lblModalityGame" Content="Modalidad de juego:" Style="{StaticResource labelStyleSimple}" HorizontalAlignment="Left" Margin="94,247,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPlayersInGame" Content="Jugadores en partida:" Style="{StaticResource labelStyleSimple}" Margin="94,376,0,0"/>
        <GridSplitter HorizontalAlignment="Left" Height="141" Margin="674,454,0,0" VerticalAlignment="Top" Width="5"/>
        <Label x:Name="lblListOfFriends" Content="Lista amigos" FontSize="20" Foreground="White" HorizontalAlignment="Left" Margin="1108,320,0,0" VerticalAlignment="Top"/>
        <Button x:Name="bttStartGame" Content="Iniciar partida" Style="{StaticResource ButtonStartGame}" HorizontalAlignment="Left" Margin="845,655,0,0" VerticalAlignment="Top" Height="44" Width="151"/>
        <Button x:Name="bttCancelGame" Content="Cancelar" Style="{StaticResource ButtonCancelGame}" HorizontalAlignment="Left" Margin="1049,654,0,0" VerticalAlignment="Top" Height="45" Width="149"/>



    </Grid>



</Page>
