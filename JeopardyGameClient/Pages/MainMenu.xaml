<Page x:Class="JeopardyGame.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p = "clr-namespace:JeopardyGame.Properties"
      xmlns:local="clr-namespace:JeopardyGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="1300"
      Title="MainMenu">
    <Viewbox Stretch="Fill">
        <Grid Height="751">
            
            <Grid.Background>
                <ImageBrush ImageSource="/Images/BackGround.jpg">
                </ImageBrush>

            </Grid.Background>
            <Image HorizontalAlignment="Left" Height="293" 
       Width="389" Margin="78,10,0,0" VerticalAlignment="Top" 
       Source="/Images/logoJeopardy.png"/>
            <Image HorizontalAlignment="Left" Height="42" Margin="10,56,0,0" VerticalAlignment="Top" Width="27" Source="/Images/BackIcon.png" MouseDown="ClicSingOut" RenderTransformOrigin="0.491,2.068" />

            <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0001" CornerRadius="5" Margin="78,270,931,376">
                <Button x:Name="bttNewGame" Content = "{x:Static p:Resources.bttNewGame}" FontSize="20" FontStretch="Expanded" Style="{StaticResource ButtonMainMenuStyle}" Click="CLicButtonNewGame" HorizontalAlignment="Left" Width="247" Margin="78,9,0,-11" />
            </Border>
            <ComboBox x:Name="LanguajeComboBox" HorizontalAlignment="Left" Margin="1092,19,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.279,-1.495" SelectionChanged="LanguageComboBox_SelectionChanged">
                <ComboBoxItem Content="English" Tag="en-EU" IsSelected="True"/>
                <ComboBoxItem Content="Español" Tag="es-MX"/>
            </ComboBox>
            <Button x:Name="bttEnterGame" Content = "{x:Static p:Resources.bttEnterGame}" FontSize="20" FontStretch="Expanded" Style="{StaticResource ButtonMainMenuPurpleStyle}" Click="CLicButtonEnterGame" HorizontalAlignment="Left" Width="249" Margin="157,420,0,235" />
            <Button x:Name="bttFriends" Content = "{x:Static p:Resources.bttFriends}" FontSize="20" FontStretch="Expanded" Style="{StaticResource ButtonMainMenuStyle}" Click="CLicButtonFriendsList" HorizontalAlignment="Left" Width="249" Margin="157,552,0,105" />


        </Grid>

    </Viewbox>

</Page>
